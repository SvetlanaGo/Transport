
@{
    ViewBag.Title = "Главная страница";
}

<h1>@ViewData["Text"]</h1>
<h2>Список</h2>
<ol type="A"> 
    @for (int i = 1; i < 5; i++)
    {
        <li>элемент @i списка</li>
        } 
</ol>
<hr />
<h2>Форма</h2>
<form class="form-horizontal" method="post" role="form">
    <div class="row">
    </div>
    <div class="form-group1">
        <div class="col-md-offset-2 col-md-8">
            <label>
                <input type="checkbox" name="checkbox1" value="1" /> Чек-бокс 1
            </label>
        </div>
        <div class="col-md-offset-2 col-md-8">
            <label>
                <input type="checkbox" name="checkbox2" value="2" /> Чек-бокс 2
            </label>
        </div>
    </div>
    <div class="form-group1 row">
        <div class="col-md-offset-2 col-md-8">
            <label><input type="radio" checked="checked" name="radio3" value="1" /> Радио-1</label>
            <label><input type="radio" name="radio3" value="2" /> Радио-2</label>
            <label><input type="radio" name="radio3" value="3" /> Радио-3</label>
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-md-2 control-label">Логин:</label>
        <div class="col-md-8">
            <input type="text" id="name" name="login" class="form-control" placeholder="Введите логин" />
        </div>
    </div>
    <div class="form-group row">
        <label for="pass" class="col-md-2 control-label">Пароль:</label>
        <div class="col-md-8">
            <input type="password" id="pass" name="pass" class="form-control" placeholder="Введите пароль" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <button type="submit" class="btn btn-info">Отправить</button>
        </div>
    </div>
    <hr />
    <select asp-items="@ViewData["Lst"] as SelectList"></select>
</form>

